
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["firstName", "lastName", "email"]
    },
    "Appointment": {
      "title": "Appointment",
      "type": "object",
      "description": "Represents a scheduled appointment.",
      "properties": {
        "userId": {
            "type": "string",
            "description": "The ID of the user who booked the appointment."
        },
        "bankName": {
          "type": "string",
          "description": "The name of the bank for the appointment."
        },
        "branch": {
            "type": "string",
            "description": "The bank branch for the appointment."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the appointment."
        },
        "time": {
            "type": "string",
            "description": "The selected time slot for the appointment."
        },
        "accountNumber": {
            "type": "string",
            "description": "User's bank account number."
        },
        "serviceCategory": {
            "type": "string",
            "description": "The category of the selected banking service."
        },
        "specificService": {
            "type": "string",
            "description": "The specific banking service selected."
        },
        "confirmedDocuments": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "A list of documents the user confirmed they will bring."
        },
        "customAppointmentId": {
            "type": "string",
            "description": "A unique, custom-formatted ID for the appointment."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the appointment was created."
        }
      },
      "required": ["userId", "bankName", "branch", "date", "time", "serviceCategory", "specificService", "customAppointmentId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores user profile information, keyed by user ID."
    },
    "/users/{userId}/appointments/{appointmentId}": {
      "schema": { "$ref": "#/backend/entities/Appointment" },
      "description": "Stores appointments for each user, ensuring data is user-specific."
    }
  }
}

    
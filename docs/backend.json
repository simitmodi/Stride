{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "The user's first name."
        },
        "lastName": {
          "type": "string",
          "description": "The user's last name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["firstName", "lastName", "email"]
    },
    "Appointment": {
      "title": "Appointment",
      "type": "object",
      "description": "Represents a scheduled appointment.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title or reason for the appointment."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the appointment."
        },
        "location": {
          "type": "string",
          "description": "The location or branch for the appointment."
        }
      },
      "required": ["title", "date", "location"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores user profile information, keyed by user ID."
    },
    "/users/{userId}/appointments/{appointmentId}": {
      "schema": { "$ref": "#/backend/entities/Appointment" },
      "description": "Stores appointments for each user, ensuring data is user-specific."
    }
  }
}
